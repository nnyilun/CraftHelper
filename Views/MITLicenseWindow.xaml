<Window x:Class="CraftHelper.Views.MITLicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraftHelper.Views"
        xmlns:vm="clr-namespace:CraftHelper.ViewModels" d:DataContext="{d:DesignInstance Type=vm:AboutUsrCtrlViewModel}"
        mc:Ignorable="d"
        Title="MIT License" Height="320" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Height="240" Width="540"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap"
                 FontSize="18"
                 IsReadOnly="True"
                 Text="{Binding MITText, Mode=OneWay}"/>
    </Grid>
</Window>
